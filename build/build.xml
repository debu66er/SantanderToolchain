<project name="Santander Build Script" default="all" basedir=".">
	
	<target name="all" depends="init, compile, package, deploy">
		<echo message="Build completed." />
	</target>

	<target name="init">
		<echo message="Bluemix ARCHIVE_DIR: ${ARCHIVE_DIR}"/>
		<echo message="Jenkins BUILD_NUMBER: ${BUILD_NUMBER}"/>
		<echo message="Jenkins BUILD_ID: ${BUILD_ID}"/>
		<echo message="Jenkins BUILD_URL: ${BUILD_URL}"/>
		<echo message="Jenkins BUILD_TAG: ${BUILD_TAG}"/>
		
		<echo file="output.txt" append="true">
   abc=${ARCHIVE_DIR}
</echo>
	</target>
	
	<target name="compile">
	</target>

	<target name="package">
	</target>
				
	<target name="deploy">
		<copy todir="${ARCHIVE_DIR}">
			<fileset file="../index.html" />
			<fileset file="../output.txt" />
	    </copy>
	</target>
	
</project>